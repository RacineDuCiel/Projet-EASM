# ============================================
# SECRETS & SECURITY
# ============================================
# Generate a strong secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-must-be-at-least-32-chars
FIRST_SUPERUSER=admin
FIRST_SUPERUSER_PASSWORD=ChangeMe123!

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# In production, set to your actual domain(s)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173


# ============================================
# DATABASE
# ============================================
POSTGRES_USER=easm_user
POSTGRES_PASSWORD=easm_password
POSTGRES_DB=easm_db
DATABASE_URL=postgresql://easm_user:easm_password@db:5432/easm_db


# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0
# Required for production (uncomment and set)
# REDIS_PASSWORD=your-redis-password


# ============================================
# BACKEND
# ============================================
BACKEND_URL=http://backend:8000/api/v1

# Worker-to-Backend Authentication Token
# Generate with: openssl rand -hex 32
# IMPORTANT: Change this in production!
WORKER_SECRET_TOKEN=change-me-in-production-use-secrets-token-hex-32


# ============================================
# NOTIFICATIONS
# ============================================
# Discord Webhook URL for vulnerability alerts
DISCORD_WEBHOOK_URL=


# ============================================
# SCAN CONFIGURATION
# ============================================
# Ports to scan with Naabu (comma-separated)
SCAN_PORTS=80,443,3000-3010,4200,5000-5010,8000-8010,8080-8090

# HTTP Timeout for API calls (seconds)
HTTP_TIMEOUT=30


# ============================================
# PASSIVE RECONNAISSANCE API KEYS (Optional)
# ============================================
# These are global defaults. Per-program keys can override these.
# Shodan API (https://account.shodan.io/)
SHODAN_API_KEY=
# SecurityTrails API (https://securitytrails.com/app/account/credentials)
SECURITYTRAILS_API_KEY=
# Censys API (https://search.censys.io/account/api)
CENSYS_API_ID=
CENSYS_API_SECRET=
# HackerTarget API (free tier works without key)
HACKERTARGET_API_KEY=

# Passive recon timeout in seconds
PASSIVE_RECON_TIMEOUT=120
# Enable/disable passive recon globally
ENABLE_PASSIVE_RECON=true


# ============================================
# ENVIRONMENT
# ============================================
# Options: development, production, staging
ENVIRONMENT=development


# ============================================
# CELERY FLOWER MONITORING
# ============================================
# Basic auth for Flower dashboard (format: user:password)
# Change this in production!
FLOWER_BASIC_AUTH=admin:changeme